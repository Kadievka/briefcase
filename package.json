{
  "name": "briefcase",
  "version": "1.0.0",
  "description": "",
  "main": "dist/app.js",
  "scripts": {
    "start": "tsc && node --env-file=.env dist/app.js",
    "start:dev": "tsc-watch --noClear -p tsconfig.json --onSuccess \"node --env-file=.env ./dist/app.js\"",
    "test": "jest --silent --coverage --collectCoverageFrom='./src/**'",
    "test:w": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:report": "playwright test show report",
    "e2e": "cucumber-js -p default",
    "e2e:report": "node --env-file=.env cucumber.report.js",
    "format": "npm run format:prettier",
    "format:prettier": "prettier --config .prettierrc \"src/**/*.{ts,css,less,scss,js}\" \"tests/**/*.{ts,css,less,scss,js}\" --write",
    "lint": "tslint --project tsconfig.json"
  },
  "author": "Kadievka Salcedo",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^10.4.0",
    "@jest/globals": "^29.7.0",
    "@microsoft/tsdoc": "^0.14.2",
    "@playwright/test": "^1.43.0",
    "@shelf/jest-mongodb": "^4.2.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/express": "^4.16.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "cucumber-html-reporter": "^7.1.1",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "js-beautify": "^1.15.1",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.2.0",
    "tslint": "^5.12.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@cucumber/pretty-formatter": "^1.0.1",
    "express": "^4.16.4",
    "mongodb": "^6.5.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "typescript-logging": "^2.2.0",
    "typescript-logging-log4ts-style": "^2.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged format"
    }
  },
  "lint-staged": {
    "*.{ts,css,less,scss,js}": [
      "prettier --config .prettierrc --write",
      "git add"
    ],
    "*.html": [
      "js-beautify --config .jsbeautifyrc --type 'html' --replace",
      "git add"
    ]
  }
}
