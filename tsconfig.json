{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "rootDir": "./src",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src/**/*.ts", "tests/unit/mocks/Users.ts"],
  "exclude": [
    "node_modules"
  ]
}